<div class="wrapper_with_padding">
  <div class="clearfix" id="notes">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <a href="<%= (url_for [note]) %>">
          <div class="note">
            <p class="title">
              <%= note.title %>
            </p>
            <p class="date">
              Created <%= time_ago_in_words(note.created_at) %> ago
            </p>
          </div>
        </a>
      <% end %>
    <% else %>
      <h2>Add a Note</h2>
      <p>You haven't created any notes yet.</p>
      <button>
        <%= link_to "Add Note", new_note_path %>
      </button>
    <% end %>
  </div>
</div>
